<% layout("layouts/boilerplate") %>
<style>
    h2{
        text-align: center;
        margin-top: 1.5rem;
        margin-bottom: 1.5rem;
    }

    h4{
        text-align: center;
        margin-top: 10rem;
    }
</style>

<h2><%= category.charAt(0).toUpperCase() + category.slice(1) %> Listings</h2>

   <% if(listings.length === 0){ %>
    <h4>No listings found in this category.</h4>
    <% } else {%>
   <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
     <% for(let listing of listings){ %>
   <a href="/listings/<%=listing.id%>" class="class-link">
       <div class="card col listing-card">
  <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_image" style="height: 20rem;">
  <div class="card-body">
    <p class="card-text">
      <b><%=listing.title %></b>  <br>
     &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "Not available" %> / night
     <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
    </p>
  </div>
</div>
   </a>
 <%}%>
</div>
        <% } %>
